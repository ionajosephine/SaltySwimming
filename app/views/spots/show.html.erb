    data-map-latitude-value="<%= @spot.latitude %>"
    data-map-longitude-value="<%= @spot.longitude %>"
    data-map-zoom-value="12"
    data-map-marker-value="true">
    <div class="w-96 h-96 bg-pink-200 border rounded-lg" data-map-target='map'></div>
